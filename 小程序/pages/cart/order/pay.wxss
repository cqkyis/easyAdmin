/* pages/cart/order/pay.wxss */
@import "../../../common/font.wxss";
@import "../../../common/base.wxss";
page{
  background: #f1f1f1
}
.msg{
  height: 40px;
  background: #fff9e2;
  width: 100%;
  /* margin-bottom: 10px; */
}
.msg-sccuess{
  background: #ff4891;
  padding: 5px;
  font-size: 12px;
  margin-left: 10px;
  border-radius: 5px;
  margin-top: 5px;
  float: left;
  color: #fff
}
.msg-title{
  font-size: 12px;
  line-height: 40px;
  float: left;
  margin-left: 10px;
}

.list{
  height: 70px;
  width: 100%;
  position: relative;
  /* line-height: 90rpx; */
  font-size: 28rpx;
  background: #fff;
  padding-left: 25rpx;
  padding-right: 25rpx;
  
}
.list:after{
  position: absolute;
   bottom: 0;
    left: 0px;
    right: 0px;
    height: 1px;
    content: '';
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    background-color: #f1f1f1;
}
.address{
  background: #fff;
  
  width: 100%;
 
}
.list-address {
 box-sizing: border-box;
 margin-right: 40px;
}
 .null-address{
  height: 80px;
  line-height: 60px;
  text-align: center;
  box-sizing: border-box;
  margin-right: 40px;
} 
.list-address text{
  width: 100%;
  float: left
}
.list .right{
  width: 40px;
  text-align: center;
  margin-top: -60px;
  margin-right: 20px;
}
.ad{
  font-size: 14px;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
  line-height: 40px;
}
.ua{
  color: #666;
  font-size: 14px;
}
.card{
 
  width: 100%;
  background: #fff;
  margin-top: 10px;
}
.card .card-header{
  padding:11px 15px;
  font-size: 14px;
  position: relative
}
.card-header:after,.card-body:after{
   position: absolute;
   bottom: 0;
    left: 10px;
    right: 10px;
    height: 1px;
    content: '';
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    background-color: #f1f1f1;
}
.card-body{
  position: relative;
  width: 100%;
  float: left;
  height: 80px;
  background: #fff
}
.card-body image{
  width: 60px;
  height: 60px;
  margin-left: 15px;
  margin-top: 10px;
}
.card-body .name{
  font-size: 14px;
  line-height: 80px;
  margin-left: 15px;
}
.card-body .nums{
  font-size: 12px;
  line-height: 80px;
  margin-right: 10px;
}
.card-body .iconfont{
  line-height: 80px;
  margin-right: 15px;
}
.pay-bottom{
  position: fixed;
  bottom: 0;
  height: 44px;
  border-top: #ddd solid 1px;
  width: 100%;
  background: #fff
}
.pay-bottom .right{
  background: #ff4891;
  color: #fff;
  padding: 13px 15px;
  font-size: 14px;
}
.pay-bottom .left{
  font-size: 16px;
  margin-left: 10px;
  line-height: 44px;
}
.pay-bottom .left text{
  color: #ff4891;
  font-size: 16px;
}
/* 如果提供全部四个参数值，将按上－右－下－左的顺序作用于四边。 */
.pay-price{
  width: 100%;
 
  background: #fff;
  float: left;
  margin-top: 10px;
  padding: 0 15px;
}


.clist{
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: #f1f1f1 solid 1px;
  font-size: 24rpx;
}
.allprice{
  color: #ff4891;
  font-size: 32rpx;
}
.boprice{
  width: 35%;
  float: left;
  font-size: 24rpx;
  margin-left: 30rpx;
}
.boprice text{
  width: 100%;
  float: left;
  
  
}
.boall{
  font-size: 28rpx;
  color: #ff4891;
  line-height: 40rpx;
  margin-top: 10rpx;
}
.boyf{
  font-size: 24rpx;
  color: #666;
  line-height: 30rpx;
}
.h44{
  width: 100%;
  height: 108rpx;
}
.pay-price .right{
  margin-right: 30px;
}