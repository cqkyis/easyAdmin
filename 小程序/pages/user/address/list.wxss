@import "../../../common/font.wxss";
@import "../../../common/base.wxss";
page{
  background: #f7f7f7;
}
.ad-footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  font-size: 28rpx;
  text-align: center;
  border-top: #f1f1f1 solid 1px;
  line-height: 88rpx;
  background: #fff
}
.ad-footer .iconfont{
  margin-right: 15rpx;
  color: #ff4891
}



.list{
 height: 60px;
 width: 100%;
  position: relative;
  background: #fff;
  margin-top: 20rpx;
}
.list:after{
  position: absolute;
  bottom: 0;
  left: 15px;
  right: 15px;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  background-color: #f1f1f1;
}
.col-xs-10{
  width: 85%;
}
.col-xs-2{
  width: 15%;
  font-size: 14px;
  line-height: 60px;
}
.col-xs-10 text{
  width: 100%;
  
  float: left;
 margin-left: 20rpx;
}
.col-xs-10 .u{
  font-size: 14px;
  line-height: 35px;
}
.col-xs-10 .a{
  font-size: 12px;
  color: #666
}
.col-xs-2:after{
  
  content:"";
    width:1px;
    height:40px;
    position:absolute;
    top:15rpx;
    background:#f1f1f1;
    right: 20%;
}