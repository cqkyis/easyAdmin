.card-footer button{
  width: 25%;
  font-size: 12px;
  margin-top: 5px;
  margin-bottom: 5px;
  border-radius: 4px;
  background: #fff;
  margin-right: 15px;
   margin-left: 15px;
}
.allnoic{
  
  height: 40px;
  
  position: relative;
  width: 100%;
  float: left;
  font-size: 12px;
  color: #666;
  line-height: 40px;
}
.allnoic .right{
  margin-right: 15px;
}