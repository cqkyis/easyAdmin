/* pages/user/order/all.wxss */
@import "../../../common/font.wxss";
@import "../../../common/base.wxss";
page{
  background: #f1f1f1;
}
.card{
 
  width: 100%;
  background: #fff;
  margin-top: 10px;
  float: left
}
.card .card-header{
  padding:11px 15px;
  font-size: 14px;
  position: relative
}
.card-header:after,.card-body:after{
   position: absolute;
   bottom: 0;
    left: 10px;
    right: 10px;
    height: 1px;
    content: '';
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    background-color: #f1f1f1;
}
.card-body{
  position: relative;
  width: 100%;
  float: left;
  height: 60px;
  background: #fff
}
.card-body image{
  width: 40px;
  height: 40px;
  margin-left: 15px;
  margin-top: 10px;
}
.card-body .name{
  font-size: 14px;
  line-height: 60px;
  margin-left: 15px;
}
.card-body .nums{
  font-size: 12px;
  line-height: 60px;
  margin-right: 10px;
}
.card-body .iconfont{
  line-height: 60px;
  margin-right: 15px;
}
.card-header .title{
  font-size: 12px;
  color: #666
}
.card-footer{
  height: 40px;
  position: relative;
  width: 100%;
  float: left;
  
  background: #fff
}
/* .card-footer{
  
  
  
